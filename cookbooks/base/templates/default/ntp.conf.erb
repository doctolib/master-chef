<% @servers.each do |s| %>
<%  -%>server <%= s %><% if @server.use_iburst -%> iburst<% end -%> minpoll <%= @server.minpoll %> maxpoll <%= @server.maxpoll %>
<% end %>

<% unless @local_stratum == -1 %>
server 127.127.1.0
fudge 127.127.1.0 stratum <%= @local_stratum %>
<% end %>

restrict -4 default nomodify nopeer noquery notrap
restrict -6 default nomodify nopeer noquery notrap
restrict 127.0.0.1
restrict ::1
disable monitor

<% if @interfaces %>
interface ignore wildcard
<% @interfaces.each do |x| %>
interface listen <%= x %>
<% end %>
<% end %>
